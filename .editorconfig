# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.{py,rst,ini}]
indent_style = space
indent_size = 4

[*.erl]
line_length = 120
known_first_party = src
multi_line_output = 3
recursive = true
skip = _build/

[*.{html,css,scss,json,yml,dtl}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
indent_size = 2

[Makefile]
indent_style = tab

[*.{conf,config}]
indent_style = space
indent_size = 2
